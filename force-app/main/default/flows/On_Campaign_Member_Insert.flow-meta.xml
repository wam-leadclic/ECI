            </connector>
            <label>No tiene teléfono</label>
        </rules>
        <rules>
            <name>ReglaCTIDesactivada</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.CTIErrorCampDesactivada__c</leftValueReference>
