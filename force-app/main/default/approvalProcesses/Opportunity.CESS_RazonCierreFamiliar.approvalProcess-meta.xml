<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Opportunity_header__c</field>
        <field>campaign__c</field>
        <field>source_type__c</field>
        <field>line_insurance__c</field>
        <field>Loss_Reason__c</field>
        <field>CESS_AreaOwner__c</field>
        <field>Owner</field>
        <field>CESS_OpportunityApprover1__c</field>
        <field>CESS_OpportunityApprover2__c</field>
        <field>CESS_OpportunityApprover3__c</field>
        <field>CESS_OpportunityApprover4__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CESS_OpportunityApprover4__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>CESS_OpportunityApprover5__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>CESS_OpportunityApprover1__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>CESS_OpportunityApprover3__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>CESS_OpportunityApprover2__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Validate Loss Reason</label>
        <name>CESS_ValidateLossReason</name>
    </approvalStep>
    <emailTemplate>CESS_Privado/CESS_OportunidadSolicitudAprobacionMotivoPerdidaFamiliar</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Loss_Reason__c</field>
            <operation>equals</operation>
            <value>Familiar</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CESS_Set_Close_Date_to_Today</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_SetStageClosedLost</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_SetValidationToAccepted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_UpdateApprovalReplyDate</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CESS_Set_Close_Date_to_Today</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_SetStageClosedLost</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_SetValidationToRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_UpdateApprovalReplyDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_UpdateLossReason</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CESS_Approval_Request</name>
            <type>Alert</type>
        </action>
        <action>
            <name>CESS_DateApprovalRequestToday</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_SetValidationToRequested</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Razon Cierre Familiar</label>
    <recallActions>
        <action>
            <name>CESS_DeleteDateApprovalRequested</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_SetValidationToDefault</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CESS_UpdateLossReason</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
